// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:prisma/dev.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  description String
}

model User {
  id         Int      @id @default(autoincrement())
  role       String
  email      String   @unique
  name       String?
  password   String
}
